{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "type/**.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "vite/**/*.ts",
    "**/**/*.vue",
    "mock/**/*.ts",
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "element-plus/global"
    ],
    "ignoreDeprecations": "5.0"
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
