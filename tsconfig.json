{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "type/**.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "vite/**/*.ts",
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "element-plus/global"
    ]
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
